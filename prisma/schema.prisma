generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" 
  url      = env("DATABASE_URL")
}

model Billing {
  id            String    @id @default(uuid()) 
  orderId       String
  paymentMethod PaymentMethod
  amount        Float
  paymentDate   DateTime
  status        Status
  transactionalId String    @unique
}

enum PaymentMethod {
  efectivo
  tarjeta
  transferencia
}

enum Status {
  pagado
  pendiente
  cancelado
}
